<module>
	<inherits name="com.google.gwt.core.Core" />
	<inherits name="com.google.gwt.user.RemoteService" />
	<inherits name="com.google.gwt.rpc.RPC" />
	
	<source path="client" />
  	<public path='php' />
  	
  	<!-- 
  		Generate a php model from java service class
  	-->
	<define-configuration-property name="gwt.phprpc.generateServiceModel" is-multi-valued="false" />
	<set-configuration-property name="gwt.phprpc.generateServiceModel" value="true" />
	
	<!-- 
  		EXPERIMENTAL
  		create only one file containing all types converted to php
  	-->
	<define-configuration-property name="phprpc.generateUniquePhpTypeFile" is-multi-valued="false" />
	<set-configuration-property name="phprpc.generateUniquePhpTypeFile" value="false" />
	
	<!-- 
  		Path(s) to include in all generated service
  	-->
	<define-configuration-property name="gwt.phprpc.includePaths" is-multi-valued="true" />
	
	<!-- 
		Exclude pattern or file from generating php file
	-->
	<define-configuration-property name="gwt.phprpc.excludeJavaTypeToPhp" is-multi-valued="true" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaTypeToPhp" value="~java[.].*" />
	
	<define-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" is-multi-valued="true" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.Exception" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.RuntimeException" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.ClassNotFoundException" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.NoSuchMethodException" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.IllegalArgumentException" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.IllegalStateException" />
	<extend-configuration-property name="gwt.phprpc.excludeJavaExceptionToPhp" value="java.lang.NullPointerException" />
  	
	<define-linker name="phpLinker" class="com.didactilab.gwt.phprpc.linker.PhpClientOracleLinker" />
	<add-linker name="phpLinker" />
  	
  	<generate-with class="com.didactilab.gwt.phprpc.rebind.PhpRpcServiceGenerator">
    	<when-type-assignable class="com.didactilab.gwt.phprpc.client.PhpService" />
  	</generate-with>

</module>
